@using Microsoft.AspNetCore.Mvc.ModelBinding
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <div class="card align-items-center login-card">
        <h1>Login</h1>
        <div class="text-center login-errors">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
        <div class="card-body">

            <form class="login-form" asp-controller="Login" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control" id="inputUsername" placeholder="Enter username" asp-for="Username">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" class="form-control" id="inputPassword" placeholder="Password" asp-for="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>