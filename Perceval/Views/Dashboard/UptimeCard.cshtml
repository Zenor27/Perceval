@model UptimeViewModel


<div class="card card-rounded w-100 align-items-center">
    <div class="card-body d-flex flex-row card-rounded-top">
        <h2 class="card-title">Uptime</h2>
    </div>
    <div class="card-body card-rounded-bottom text-center">
        <h3 class="mb-3">@Model.Uptime.Days days @Model.Uptime.Hours hours @Model.Uptime.Minutes minutes @Model.Uptime.Seconds seconds</h3>
        <p class="text-light text-black-50">@Model.OS</p>
    </div>
</div>